<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.yunhao.encryption.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nice Day, Hum?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.17000002"
            tools:ignore="HardcodedText"/>
    <Button
            android:layout_width="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="80dp" tools:layout_editor_absoluteY="168dp"
            android:id="@+id/button1" android:text="En-cryption"
            app:layout_constraintVertical_bias="0.38" app:layout_constraintHorizontal_bias="0.504"
            android:background="@android:color/holo_green_light"/>
    <Button
            android:text="De-cryption"
            android:layout_width="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="80dp"
            android:id="@+id/button2"
            app:layout_constraintVertical_bias="0.62" app:layout_constraintHorizontal_bias="0.504"
            android:background="?attr/colorAccent"/>

</android.support.constraint.ConstraintLayout>
